<!-- list of all burgers
add burgers to list
update burgers to list -->

<p>text to add burger here</p>
<div>
  <form action="/" method="POST">
  	<textarea type="text" name="burger"></textarea>

  	<button type="submit">ADD BURGER</button>
  </form>
</div>

<h3>BURGERS TO TRY</h3>

<ul>
  {{#each burgers}}
    <li>
      <p>
        {{this.id}}. {{this.burger_name}}

        <button data-burgerid="{{this.id}}" class="">EAT IT</button>
      </p>
    </li>
  {{/each}}
</ul>

